{{> header}}
{{#if isAuth}}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div id="fouronefour">
                        <img class="no-found-picture" src="./images/404face.png"/>
                    </div>
                    <div class="error-template">
                        <div class="error-details">
                            <p>
                                You haven participated in any quizzes yet...
                            </p>
                        </div>
                        <div class="actions">
                            <a href="#/Quizzes" class="btn btn-dark btn-lg">Take the first one? </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{{else}}
    <div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
        <div style=" padding-left: 7%; padding-top:3%;" class="col-md-7">
            <h2 class="featurette-heading">Buy products <span class="text-muted">which will improve your life!</span>
            </h2>
            <p class="lead">Join our community.</p>
            <p style="padding-left:10%" class="lead">Choose a Category.</p>
            <p style="padding-left:5%" class="lead">Take a Quiz.</p>
            <p style="padding-left:15%" class="lead">Shop!</p>
            <p style="padding-left:20%" class="lead">Improve!</p>
            <p style="padding-left:25%" class="lead">Enjoy life!</p>
        </div>
        <div class="col-md-5">
            <img class="home-quiz-picture" src="./images/quizshop.png"/>
        </div>
    </div>
{{/if}}
{{> footer}}
