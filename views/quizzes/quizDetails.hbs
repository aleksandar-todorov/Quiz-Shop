{{> header}}

    <div class="row quiz-details">
        <div class="col-md-12 text-center overflow-hidden">

            <img class="details-img"
                 src="{{imageURL}}" />
            <div class="my-3 p-3">
                <h2 class="display-5">{{name}}</h2>
                <p class="infoType">Description:</p>
                <p class="quiz-description">{{description}}</p>
                <p class="infoType">Date: <small>{{dateTime}}</small></p>
                <p class="infoType">People interested in: <small>{{joins}}</small></p>
                <p class="infoType">Organizer: <small>{{organizer}}</small></p>
            </div>
            {{#if isCreator}}
            <a href="#/edit/{{_id}}" class="btn btn-primary btn-lg">Edit the quiz</a>
            <a href="#/delete/{{_id}}" class="btn btn-danger btn-lg">Close the quiz</a>
            {{else}}
            <a href="#/join/{{_id}}" class="btn btn-info btn-lg">Join the quiz</a>
        </div>
    </div>
{{/if}}
{{> footer}}