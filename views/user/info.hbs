{{> header}}
<div class="col-md-6 text-center col-lg">
    <img class="profile-img" src="./images/user.png" />
    <div class="profile-info">
        <p>Username: <small>{{username}}</small></p>
        <p class="infoType">You did {{quizzes.length}} quizzes.</p>
        {{#if quizzes.length}}
            {{#each quizzes}}
        <p>{{name}}</p>
            {{/each}}
        {{else}}
        <p>No quizzes</p>
        {{/if}}
    </div>
</div>
{{> footer}}